<div>
  <h2><%=@user.email%></h2>

  <ul>
    <% @user_tasks.all.each do |task| %>
    <li>
      <a href="/tasks"><%= task.name %></a>
      <div>
        <% if @current_user == true %>
        <form action="/edit_task">
          <input type="submit" value="Edit">
          <input type="hidden" name="tasks[id]" value="<%= task.id%>">
        </form>
<a href="<%= user_task_path(session[:user_id]) %>" data-method="delete">Done</a>
        <%end%>
      </div>
    </li>
    <% end %>
  </ul>
</div>
<% end %>